<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_splashscreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="vn.app.tintoc.fragment.SplashScreenFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/splash_logo_width"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_shipper" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <vn.app.tintoc.control.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/new_color_text"
                app:font_family="segoe_regular"
                android:text="Dịch vụ giao hàng thu hộ tốt nhất"/>

            <vn.app.tintoc.control.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/new_color_text"
                app:font_family="segoe_regular"
                android:text="Thành phố Hồ Chí Minh"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:padding="4dp"
        android:layout_weight="6"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_shop_online"
                android:layout_width="@dimen/splash_ic_width"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:src="@drawable/ic_shop_online" />

            <vn.app.tintoc.control.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/shop_online"
                android:textSize="@dimen/splash_title"
                android:textAllCaps="true"
                app:font_family="segoe_bold"
                android:textColor="@color/txt_title" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_shop"
                android:layout_width="@dimen/splash_ic_width"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:src="@drawable/ic_cuahang" />

            <vn.app.tintoc.control.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/shop"
                android:textSize="@dimen/splash_title"
                android:textAllCaps="true"
                app:font_family="segoe_bold"
                android:textColor="@color/txt_title" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_e_commerce"
                android:layout_width="@dimen/splash_ic_width"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:src="@drawable/ic_e_commerce" />

            <vn.app.tintoc.control.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/ecommerce"
                android:textSize="@dimen/splash_title"
                android:textAllCaps="true"
                app:font_family="segoe_bold"
                android:textColor="@color/txt_title" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:background="@color/colorShopInfoTwo"
        android:orientation="vertical">

        <vn.app.tintoc.control.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="@string/start"
            android:textColor="@color/colorTextWhite"
            android:textSize="@dimen/splash_start"
            android:textAllCaps="true"
            app:font_family="segoe_semi_bold"/>

    </LinearLayout>

</LinearLayout>
