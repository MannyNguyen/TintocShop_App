<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:foreground="?selectableItemBackground"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gray_main_border_square_box"
        android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:orientation="vertical">

                <vn.app.tintoc.control.MyTextView
                    android:id="@+id/txt_number_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/code"
                    android:textColor="@color/txt_title"
                    android:textSize="14sp"
                    app:font_family="segoe_semi_bold" />

                <vn.app.tintoc.control.MyTextView
                    android:id="@+id/txt_filter_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="@string/home_status"
                    android:textColor="@color/colorShopInfoOne"
                    android:textSize="12sp"
                    app:font_family="segoe_regular" />

                <vn.app.tintoc.control.MyTextView
                    android:id="@+id/txt_time_update_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="Time update"
                    android:textColor="@color/colorShopInfoOne"
                    android:textSize="12sp"
                    app:font_family="segoe_regular" />

                <vn.app.tintoc.control.MyTextView
                    android:id="@+id/txt_payment_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="Payment status"
                    android:textColor="@color/colorPause"
                    android:textSize="12sp"
                    app:font_family="segoe_regular" />

            </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/txt_title"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="4dp"
            android:paddingTop="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <vn.app.tintoc.control.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_receiver"
                    android:textColor="@color/color_black"
                    android:textSize="12sp"
                    app:font_family="segoe_regular" />

                <vn.app.tintoc.control.MyTextView
                    android:id="@+id/txt_full_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:textColor="@color/color_black"
                    android:textSize="12sp"
                    app:font_family="segoe_regular" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <vn.app.tintoc.control.MyTextView
                    android:id="@+id/txt_shop_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shop_order_code"
                    android:textColor="@color/color_black"
                    android:textSize="12sp"
                    app:font_family="segoe_regular" />

                <vn.app.tintoc.control.MyTextView
                    android:id="@+id/shop_order_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:textColor="@color/color_black"
                    android:textSize="12sp"
                    app:font_family="segoe_regular" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="2dp">

                <vn.app.tintoc.control.MyTextView
                    android:id="@+id/txt_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:scrollHorizontally="true"
                    android:textColor="@color/color_black"
                    android:textSize="12sp"
                    app:font_family="segoe_regular" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="2dp">

                <vn.app.tintoc.control.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_income_KH"
                    android:textColor="@color/color_black"
                    android:textSize="12sp"
                    app:font_family="segoe_regular" />

                <vn.app.tintoc.control.MyTextView
                    android:id="@+id/txt_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:textColor="@color/color_black"
                    android:textSize="12sp"
                    app:font_family="segoe_regular" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="2dp">

                <vn.app.tintoc.control.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_create_date"
                    android:textColor="@color/color_black"
                    android:textSize="12sp"
                    app:font_family="segoe_regular" />

                <vn.app.tintoc.control.MyTextView
                    android:id="@+id/txt_create_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:textColor="@color/color_black"
                    android:textSize="12sp"
                    app:font_family="segoe_regular" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>




</LinearLayout>